{
  "type": "wordpress-plugin",
  "prefer-stable": true,
  "minimum-stability": "dev",
  "require": {
    "automattic/jetpack-autoloader": "^1.2.0"
  },
  "require-dev": {
    "woocommerce/woocommerce-sniffs": "0.0.9"
  },
  "autoload": {
    "psr-4": {
      "WCVendors\\": "src/"
    },
    "files": [
      "./inc/wcv-core-functions.php",
      "./inc/wcv-vendor-functions.php",
      "./inc/wcv-admin-functions.php"
    ]
  },
  "scripts": {
    "lint": "phpcs wc-vendors.php includes templates",
    "fix": "phpcbf wc-vendors.php includes templates"
  }
}
